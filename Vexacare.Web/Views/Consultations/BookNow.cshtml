<script>
    const tmCalendarGrid = document.getElementById('tm-calendar-grid');
    const tmMonthLabel = document.querySelector('.tm-cal-month');
    let currentMonth = new Date();

    function renderCalendar(month) {
      tmCalendarGrid.innerHTML = '';
      const year = month.getFullYear();
      const monthIndex = month.getMonth();

      const firstDay = new Date(year, monthIndex, 1).getDay();
      const daysInMonth = new Date(year, monthIndex + 1, 0).getDate();
      const today = new Date();

      tmMonthLabel.textContent = month.toLocaleString('default', { month: 'long', year: 'numeric' });

      let dayCount = 1;
      for (let i = 0; i < 42; i++) {
        const btn = document.createElement('button');
        const offset = (firstDay === 0 ? 6 : firstDay - 1);

        if (i >= offset && dayCount <= daysInMonth) {
          btn.textContent = dayCount;

          const dateObj = new Date(year, monthIndex, dayCount);

          // Disable past dates
          if (dateObj < new Date(today.getFullYear(), today.getMonth(), today.getDate())) {
            btn.disabled = true;
          }

          // Highlight today
          if (dateObj.toDateString() === today.toDateString()) {
            btn.classList.add('today');
          }

          btn.addEventListener('click', () => {
            document.querySelectorAll('#tm-calendar-grid button').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
          });

          dayCount++;
        } else {
          btn.disabled = true;
        }

        tmCalendarGrid.appendChild(btn);
      }
    }

    document.querySelector('.tm-cal-prev').addEventListener('click', () => {
      currentMonth.setMonth(currentMonth.getMonth() - 1);
      renderCalendar(currentMonth);
    });

    document.querySelector('.tm-cal-next').addEventListener('click', () => {
      currentMonth.setMonth(currentMonth.getMonth() + 1);
      renderCalendar(currentMonth);
    });

    renderCalendar(currentMonth);

    // Time slot selection
    document.querySelectorAll('.tm-time-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tm-time-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
      });
    });
</script>