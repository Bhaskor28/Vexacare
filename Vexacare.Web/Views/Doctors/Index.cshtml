@model IEnumerable<ProductListVM>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Product Management";
}

@section Styles {
    <style>
        .product-card {
            transition: all 0.3s ease;
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .product-img-container {
            height: 200px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .product-img {
            object-fit: cover;
            max-height: 100%;
            width: auto;
        }

        .badge-custom {
            font-size: 0.8rem;
            font-weight: 500;
            margin-right: 5px;
            margin-bottom: 5px;
        }
    </style>
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h1 class="mt-4">Product Management</h1>
        <a href="@Url.Action("RegisterDoctor","Admin")" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add Doctor
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Products List
        </div>
        <div class="card-body">
            <div class="row">
              
                    
        </div>
    </div>
</div>
