@model Vexacare.Application.Patients.ViewModels.AdminLoginVM
@{
    Layout = "_AdminLayoutBeforeLogin";
    ViewBag.Title = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-lock me-2"></i>
                        <h4 class="mb-0">Admin Portal Login</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="admin@example.com" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>

                        <div class="text-center small">
                            <a href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a>
                            @if (ViewBag.AllowRegistration == true)
                            {
                                <span class="mx-2">|</span>
                                <a href="@Url.Action("SignUp", "Account")">Create account</a>
                            }
                        </div>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>
