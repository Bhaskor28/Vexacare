
@model DoctorVM

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Doctor";
}

<div class="container mt-4">
    <h2>Delete Doctor</h2>
    <h3>Are you sure you want to delete this doctor?</h3>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Doctor Details</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
            </dl>

            <form asp-action="DeleteDoctor" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="DoctorList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.btn-danger');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this doctor?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}