@model IEnumerable<ProductListVM>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Product Management";
}

@section Styles {
    <style>
        .product-card {
            transition: all 0.3s ease;
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .product-img-container {
            height: 200px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .product-img {
            object-fit: cover;
            max-height: 100%;
            width: auto;
        }

        .badge-custom {
            font-size: 0.8rem;
            font-weight: 500;
            margin-right: 5px;
            margin-bottom: 5px;
        }
    </style>
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h1 class="mt-4">Product Management</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add New Product
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Products List
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-xl-3 col-md-4 col-sm-6 mb-4">
                        <div class="card product-card shadow-sm">
                            <div class="product-img-container">
                                @if (!string.IsNullOrEmpty(product.ProductImages))
                                {
                                    <img src="~/images/products/@product.ProductImages" class="product-img" alt="@product.Name">
                                }
                                else
                                {
                                    <i class="fas fa-box-open fa-4x text-muted"></i>
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted">@(product.Description?.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</p>
                                <h6 class="text-primary mb-3">$@product.Price.ToString("N2")</h6>

                                @if (product.ProductBenefits.Any())
                                {
                                    <div class="mb-3">
                                        <h6>Benefits:</h6>
                                        <div class="d-flex flex-wrap">
                                            @foreach (var benefit in product.ProductBenefits)
                                            {
                                                <span class="badge bg-info badge-custom">@benefit.BenefitName</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-white d-flex justify-content-between">
                                <a asp-action="ProductDetailsForAdmin" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Activate tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Initialize DataTable if needed
            $('#dataTable').DataTable();
        });
    </script>
}