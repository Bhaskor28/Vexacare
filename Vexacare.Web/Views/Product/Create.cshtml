@model AddProductVM
@{
    ViewData["Title"] = "Create Product";
}

<div class="container shadow-lg col-md-6 p-5">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group p-1 text-center mb-4">
            <h2 class="bordered">Add New Product</h2>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ProductImage" class="control-label"></label>
            <input asp-for="ProductImage" class="form-control-file" type="file" accept="image/*" />
            <span asp-validation-for="ProductImage" class="text-danger"></span>
            @if (!string.IsNullOrEmpty(Model.ProductImagePath))
            {
                <div class="mt-2">
                    <img src="@Model.ProductImagePath" alt="Current product image" style="max-height: 100px;" />
                </div>
            }
        </div>

        <div class="form-group mb-4">
            <h4 class="mb-3">Product Benefits</h4>
            @if (Model.AvailableBenefits.Any())
            {
                @for (int i = 0; i < Model.AvailableBenefits.Count; i++)
                {
                    <div class="form-check mb-2">
                        <input type="checkbox"
                               id="benefit_@Model.AvailableBenefits[i].Id"
                               name="SelectedBenefitIds"
                               value="@Model.AvailableBenefits[i].Id"
                        @(Model.SelectedBenefitIds.Contains(Model.AvailableBenefits[i].Id) ? "checked" : "")
                               class="form-check-input" />
                        <label class="form-check-label" for="benefit_@Model.AvailableBenefits[i].Id">
                            @Model.AvailableBenefits[i].BenefitName
                        </label>
                    </div>
                }
            }
            else
            {
                <p>No benefits available</p>
            }
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}