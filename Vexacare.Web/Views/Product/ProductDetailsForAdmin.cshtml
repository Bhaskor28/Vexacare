@model Vexacare.Application.Products.ViewModels.ProductDetailsVM
@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Product Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.ProductImagePath))
                            {
                                <img src="@Model.ProductImagePath"
                                     class="img-fluid rounded mb-3"
                                     alt="@Model.Name">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center"
                                     style="height: 300px;">
                                    <i class="fas fa-box-open fa-5x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h3>@Model.Name</h3>
                            <h4 class="text-primary">$@Model.Price.ToString("N2")</h4>
                            <hr>
                            <h5>Description</h5>
                            <p>@Model.Description</p>

                            @if (Model.ProductBenefits.Any())
                            {
                                <h5 class="mt-4">Benefits</h5>
                                <div class="d-flex flex-wrap">
                                    @foreach (var benefit in Model.ProductBenefits)
                                    {
                                        <span class="badge bg-info me-2 mb-2">@benefit.BenefitName</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>