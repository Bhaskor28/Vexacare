<!-- Medical Profile Form Start -->
<section class="medical-profile-form medical-profile-form-7">
    <div class="container">
        <div class="medical-profile-form-wrapper">
            <div class="form-step">
                <h2 class="form-title">Step 7: Therapies & Goals</h2>

                <form>
                    <!-- Recent Antibiotic Use Section -->
                    <div class="form-section">
                        <h3 class="section-title">Recent Antibiotic Use</h3>

                        <div class="yes-no-radio-group">
                            <label class="form-label">Breakfast</label>

                            <div class="radio-options">
                                <label class="radio-option-pill">
                                    <input type="radio" name="antibiotic-use" value="yes" />
                                    <span class="radio-pill-label">Yes</span>
                                </label>
                                <label class="radio-option-pill">
                                    <input type="radio"
                                           name="antibiotic-use"
                                           value="no"
                                           checked />
                                    <span class="radio-pill-label">No</span>
                                </label>
                            </div>
                        </div>

                        <div class="conditional-field antibiotic-conditional-field"
                             id="antibiotic-details">
                            <div class="antibiotic-info-input">
                                <label class="form-label">Antibiotic Name</label>
                                <input type="text"
                                       class="form-input"
                                       placeholder="Enter antibiotic name" />
                            </div>

                            <div class="antibiotic-info-input">
                                <label class="form-label">End of Therapy Date</label>
                                <div class="input-with-icon">
                                    <input type="text"
                                           class="form-input"
                                           placeholder="DD/MM/YYYY" />
                                    <span class="calendar-icon">&#128197;</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Supplementation Section -->
                    <div class="form-section">
                        <h3 class="section-title">Supplementation</h3>

                        <div class="checkbox-grid">
                            <label class="checkbox-option">
                                <input type="checkbox"
                                       name="supplements"
                                       value="probiotics" />
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-label">Probiotics</span>
                            </label>
                            <label class="checkbox-option">
                                <input type="checkbox"
                                       name="supplements"
                                       value="prebiotics" />
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-label">Prebiotics</span>
                            </label>
                            <label class="checkbox-option">
                                <input type="checkbox"
                                       name="supplements"
                                       value="minerals" />
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-label">Minerals</span>
                            </label>
                            <label class="checkbox-option">
                                <input type="checkbox"
                                       name="supplements"
                                       value="vitamins" />
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-label">Vitamins</span>
                            </label>
                            <label class="checkbox-option">
                                <input type="checkbox" name="supplements" value="other" />
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-label">Other</span>
                            </label>
                        </div>

                        <div class="conditional-field" id="other-supplements">
                            <label class="form-label">Other supplements name</label>
                            <input type="text"
                                   class="form-input"
                                   placeholder="Enter other supplements" />
                        </div>
                    </div>

                    <!-- Primary Health Objective Section -->
                    <div class="form-section">
                        <h3 class="section-title">
                            Select Your Primary Health Objective
                        </h3>

                        <div class="objective-cards">
                            <label class="objective-card">
                                <input type="radio"
                                       name="primary-objective"
                                       value="preventive-wellbeing" />
                                <div class="card-content">
                                    <h4>Preventive Wellbeing</h4>
                                    <p>Measuring optimal health</p>
                                    <ul>
                                        <li>Active processes</li>
                                        <li>Healthy, friendly</li>
                                        <li>General microbiota check</li>
                                    </ul>
                                </div>
                            </label>

                            <label class="objective-card">
                                <input type="radio"
                                       name="primary-objective"
                                       value="digestive-optimization" />
                                <div class="card-content">
                                    <h4>Digestive Optimization</h4>
                                    <p>Improving digestive function</p>
                                    <ul>
                                        <li>GI disorders</li>
                                        <li>Dieting</li>
                                        <li>IBS</li>
                                    </ul>
                                </div>
                            </label>

                            <!-- Additional objective cards would follow the same pattern -->
                            <!-- Weight Management -->
                            <label class="objective-card">
                                <input type="radio"
                                       name="primary-objective"
                                       value="weight-management" />
                                <div class="card-content">
                                    <h4>Weight Management</h4>
                                    <p>Measured optimization</p>
                                    <ul>
                                        <li>Weight loss</li>
                                        <li>Insulin resistance</li>
                                        <li>Dysmetabolism</li>
                                    </ul>
                                </div>
                            </label>

                            <!-- Sports Performance -->
                            <label class="objective-card">
                                <input type="radio"
                                       name="primary-objective"
                                       value="sports-performance" />
                                <div class="card-content">
                                    <h4>Sports Performance</h4>
                                    <p>Performance improvement</p>
                                    <ul>
                                        <li>Athletes</li>
                                        <li>Recovery</li>
                                        <li>Energy support</li>
                                    </ul>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Secondary Objectives Section -->
                    <div class="form-section">
                        <h3 class="section-title">
                            Select Secondary Objectives (You can choose multiple)
                        </h3>

                        <div class="secondary-objectives-grid">
                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="increased-energy" />
                                <span class="objective-label">Increased Energy</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="improved-sleep" />
                                <span class="objective-label">Improved Sleep</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="stress-reduction" />
                                <span class="objective-label">Stress Reduction</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="hunger-control" />
                                <span class="objective-label">Hunger Control</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="muscle-recovery" />
                                <span class="objective-label">Muscle Recovery</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="inflammation-reduction" />
                                <span class="objective-label">Inflammation Reduction</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="hormone-balance" />
                                <span class="objective-label">Hormone Balance</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="detoxification" />
                                <span class="objective-label">Detoxification</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="skin-health" />
                                <span class="objective-label">Skin Health</span>
                            </label>

                            <label class="secondary-objective">
                                <input type="checkbox"
                                       name="secondary-objectives"
                                       value="other" />
                                <span class="objective-label">Other</span>
                            </label>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="form-buttons">
                        <button type="button"
                                class="btn btn-prev"
                                onclick="prevStep()">
                            Previous
                        </button>
                        <button type="submit" class="btn btn-submit">
                            Submit & Finish
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
