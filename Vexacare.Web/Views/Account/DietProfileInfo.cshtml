<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dietOptions = document.querySelectorAll('input[name="DietFood"]');
        const otherInput = document.getElementById("other-diet-input");

        dietOptions.forEach((option) => {
            option.addEventListener("change", function () {
                if (this.value === "other") {
                    otherInput.style.display = "block";
                } else {
                    otherInput.style.display = "none";
                    otherInput.value = "";
                }
            });

            // Show the input on page load if "other" is already selected
            if (option.checked && option.value === "other") {
                otherInput.style.display = "block";
            }
        });
    });
</script>
