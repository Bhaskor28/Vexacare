<!-- Medical Profile Form Start -->
<section class="medical-profile-form">
    <div class="container">
        <div class="medical-profile-form-wrapper">
            <div class="form-step">
                <h2 class="form-title">Step 1: Basic Info</h2>

                <!-- Profile Picture Upload -->
                <div class="profile-upload">
                    <div class="upload-circle">
                        <span class="upload-icon">&#128247;</span>
                    </div>

                    <p class="upload-title">Upload Profile Picture</p>

                    <p class="upload-subtitle">
                        Drag and drop or click to upload<br />PNG or JPG (max. 2MB)
                    </p>

                    <input type="file"
                           id="profilePic"
                           accept="image/png, image/jpeg"
                           hidden />
                </div>

                <!-- Form Fields -->
                <form onsubmit="nextStep(event)">
                    <label class="form-label">Date of Birth</label>
                    <div class="input-with-icon">
                        <input type="text"
                               class="form-input"
                               placeholder="DD/MM/YYYY" />
                        <span class="calendar-icon">&#128197;</span>
                    </div>

                    <label class="form-label">Gender</label>
                    <select class="form-input">
                        <option>Select your gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>

                    <label class="form-label">Country</label>
                    <select class="form-input">
                        <option>England</option>
                        <option>United States</option>
                        <option>Bangladesh</option>
                    </select>

                    <label class="form-label">City</label>
                    <input type="text"
                           class="form-input"
                           placeholder="Enter your city" />

                    <label class="form-label">Postcode</label>
                    <input type="text"
                           class="form-input"
                           placeholder="Enter your postcode" />

                    <!-- Buttons -->
                    <div class="form-buttons">
                        <button type="button" class="btn btn-prev" disabled>
                            Previous
                        </button>
                        <button type="submit" class="btn btn-next">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Medical Profile Form End -->