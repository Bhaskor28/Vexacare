<!-- Medical Profile Form Start -->
<section class="medical-profile-form">
    <div class="container">
        <div class="medical-profile-form-wrapper">
            <div class="form-step">
                <h2 class="form-title">Step 1: Basic Info</h2>

                @* <form asp-action="BasicInfo" mathod="post" class="login-form-input-wrapper"> *@
                    @* change this sazib *@
                <form asp-action="BasicInfo" method="post" enctype="multipart/form-data" class="login-form-input-wrapper">

                    @* Display all model-level errors *@
                    <!-- Profile Picture Upload -->
                    <div class="profile-upload">
                        <div class="upload-circle"
                             id="uploadCircle"
                             role="button"
                             tabindex="0"
                             aria-label="Upload profile picture">

                            <img id="previewImage"
                                 alt="Profile preview"
                                 src="@Model.ProfilePictureUrl"
                                 style="@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "display: none;" : "display: block;")" />

                            <div id="loader" class="loader" style="display: none"></div>

                            @* ⬇️ Only show upload icon when no image exists *@
                            <span class="upload-icon" id="uploadIcon"
                                  style="@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "display: inline;" : "display: none;")">
                                &#128247;
                            </span>
                        </div>


                        <p class="upload-title">Upload Profile Picture</p>

                        <p class="upload-subtitle">
                            Drag and drop or click to upload<br />PNG or JPG (max. 2MB)
                        </p>

                        <input asp-for="ProfilePicture" type="file"
                               id="profilePic"
                               accept="image/png, image/jpeg"
                               hidden />
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>

                

                <!-- Form Fields -->
                @* @* <form onsubmit="nextStep(event)">   Sazib change here *@
                    <label class="form-label">Date of Birth</label>
                    <div class="input-with-icon">
                        <input asp-for="DateOfBirth" type="date"
                               class="form-input"
                               placeholder="DD/MM/YYYY" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <label class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-input">
                        <option>Select your gender</option>
                        @foreach (var gender in Enum.GetValues(typeof(Vexacare.Domain.Enums.Gender)).Cast<Vexacare.Domain.Enums.Gender>())
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>

                    <label class="form-label">Country</label>
                    <select asp-for="Country" class="form-input">
                        <option value="">Select your country</option>
                        @foreach (var country in Enum.GetValues(typeof(Vexacare.Domain.Enums.Country)).Cast<Vexacare.Domain.Enums.Country>())
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                    <span asp-validation-for="Country" class="text-danger"></span>

                    <label class="form-label">City</label>
                    <input asp-for="City" type="text"
                           class="form-input"
                           placeholder="Enter your city" />
                    <span asp-validation-for="City" class="text-danger"></span>

                    <label class="form-label">Postcode</label>
                    <input asp-for="Postcode" type="text"
                           class="form-input"
                           placeholder="Enter your postcode" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>

                    <!-- Buttons -->
                    <div class="form-buttons">
                        <button type="button" class="btn btn-prev" disabled>
                            Previous
                        </button>
                        <button type="submit" class="btn btn-next">Next</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
<!-- Medical Profile Form End -->

