@model List<Vexacare.Domain.Entities.Order.Order>

@{
    ViewData["Title"] = "Orders Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    th{
        text-align:center;
    }
    td{
        text-align:center;
    }
    
</style>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Orders Management</h1>
        <span class="badge badge-primary">@Model.Count Orders</span>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Orders</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Kit State</th>
                                <th>State Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderNumber</td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td>@order.FullName</td>
                                    <td>@order.OrderItems.Sum(oi => oi.Quantity)</td>
                                    <td>@order.Total.ToString("C")</td>
                                    <td>
                                        <span >@order.KitState.ToString()</span>
                                    </td>
                                    <td>
                                        <span>@order.StateStatus.ToString()</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = order.Id })"
                                           class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = order.Id })"
                                           class="btn btn-info btn-sm">
                                            <i class="fas fa-pencil"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = order.Id })"
                                           class="btn btn-info btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No orders found.
                </div>
            }
        </div>
    </div>
</div>

