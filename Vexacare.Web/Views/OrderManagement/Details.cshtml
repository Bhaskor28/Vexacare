@model Vexacare.Domain.Entities.Order.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Order Details - @Model.OrderNumber</h1>
        <a href="@Url.Action("DisplayOrderList")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Items</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@item.Quantity</td>
                                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right"><strong>Subtotal:</strong></td>
                                    <td><strong>@Model.Subtotal.ToString("C")</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right"><strong>Shipping:</strong></td>
                                    <td><strong>@Model.Shipping.ToString("C")</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right"><strong>Tax:</strong></td>
                                    <td><strong>@Model.Tax.ToString("C")</strong></td>
                                </tr>
                                <tr class="table-primary">
                                    <td colspan="3" class="text-right"><strong>Total:</strong></td>
                                    <td><strong>@Model.Total.ToString("C")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Information</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Order Number:</strong> @Model.OrderNumber
                    </div>
                    <div class="mb-3">
                        <strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy HH:mm")
                    </div>
                    <div class="mb-3">
                        <strong>Test State:</strong>
                        <span>@Model.KitState.ToString()</span>
                    </div>
                    <div class="mb-3">
                        <strong>State Status:</strong>
                        <span>@Model.StateStatus.ToString()</span>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Customer Information</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2"><strong>Name:</strong> @Model.FullName</div>
                    <div class="mb-2"><strong>Phone:</strong> @Model.PhoneNumber</div>
                    <div class="mb-2"><strong>Address:</strong> @Model.Address</div>
                    <div class="mb-2"><strong>City:</strong> @Model.City</div>
                    <div class="mb-2"><strong>Zip Code:</strong> @Model.ZipCode</div>
                    <div class="mb-2"><strong>Country:</strong> @Model.Country</div>
                    @if (!string.IsNullOrEmpty(Model.OrderNotes))
                    {
                        <div class="mt-3">
                            <strong>Order Notes:</strong>
                            <p class="text-muted">@Model.OrderNotes</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>